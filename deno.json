{
    "tasks": {
        "build": "deno check './.github/cicd/**/*.ts'",
        "fmt": "deno fmt './.github/cicd/**/*.ts'",
        "lint": "deno lint './.github/cicd/**/*.ts'",
        "reload-cache": "deno cache -r './.github/cicd/core/**/*.ts' './.github/cicd/manual-testing/**/*.ts' './.github/cicd/scripts/**/*.ts'"
    },
	"fmt": {
        "include": [".github/cicd/**/*.ts"],
        "exclude": [
            "**/.config/",
            "**/.docusaurus/",
            "**/.vscode/",
            "**/node_modules/",
            "**/build/",
            "**/src/",
            "**/static/",
            "**/code_coverage/",
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/RepoSrc/",
            "**/versioned_docs/",
            "**/SampleProjects/",
            "**/unprocessed-docs/",
            "playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
	},
    "nodeModulesDir": false,
	"lint": {
        "include": [".github/cicd/**/*.ts"],
        "exclude": [
            "**/*.json",
            "**/*.md",
            "**/*.mdx",
            "**/*.js",
            ".docusaurus/",
            "**/code_coverage/",
            "**/build/",
            "**/src/",
            "**/static/",
            "**/versioned_docs/",
            "**/versioned_sidebars/",
            "**/SampleProjects/",
            "**/node_modules/",
            "**/docs/",
            "**/RepoSrc/"
        ],
		"rules": {
			"include": [
				"explicit-function-return-type"
			]
		}
	},
    "exclude": [
        "**/*.md",
        "**/*.mdx",
        "**/*.json",
        "**/*.js",
        ".git/",
        ".docusaurus/",
        "code_coverage/",
        "build/",
        "docs/",
        "src/",
        "static/",
        "**/SampleProjects/",
        "**/versioned_docs/",
        "**/versioned_sidebars/",
        "**/node_modules/",
        "**/package.json",
        "**/build/",
        "**/RepoSrc/"
    ]
}
