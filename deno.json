{
    "tasks": {
        "build": "deno check ./.github/cicd/",
        "fmt": "deno fmt ./.github/cicd/",
        "lint": "deno lint ./.github/cicd/",
        "check": "deno check ./.github/cicd/",
        "reload-cache": "deno cache -r ./.github/cicd/",
        "create-pr": "deno run -A jsr:@kinsondigital/sprocket@2.2.0 run-job ./DevTools/sprocket-config.ts --job-name Create-PR",
        "create-nuget-pkg": "deno run -ERWSN --allow-run ./dev-scripts/create-local-nuget.ts"
    },
    "fmt": {
        "include": [
            ".github/cicd/"
        ],
        "exclude": [
            "**/.config/",
            "**/.docusaurus/",
            "**/.vscode/",
            "**/node_modules/",
            "**/build/",
            "**/src/",
            "**/static/",
            "**/code_coverage/",
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/RepoSrc/",
            "**/versioned_docs/",
            "**/SampleProjects/",
            "**/unprocessed-docs/",
            "playground.ts"
        ],
        "useTabs": true,
        "lineWidth": 130,
        "indentWidth": 4,
        "semiColons": true,
        "singleQuote": false
    },
    "lint": {
        "exclude": [
            "**/.config/",
            "**/.docusaurus/",
            "**/.vscode/",
            "**/node_modules/",
            "**/build/",
            "**/src/",
            "**/static/",
            "**/code_coverage/",
            "**/*.md",
            "**/*.json",
            "**/*.js",
            "**/RepoSrc/",
            "**/versioned_docs/",
            "**/SampleProjects/",
            "**/unprocessed-docs/",
            "playground.ts"
        ]
    },
    "exclude": [
        "**/.config/",
        "**/.docusaurus/",
        "**/.vscode/",
        "**/node_modules/",
        "**/build/",
        "**/src/",
        "**/static/",
        "**/code_coverage/",
        "**/*.md",
        "**/*.json",
        "**/*.js",
        "**/RepoSrc/",
        "**/versioned_docs/",
        "**/SampleProjects/",
        "**/unprocessed-docs/",
        "playground.ts"
    ],
    "imports": {
        "@std/fs": "jsr:@std/fs@^1.0.19",
        "@std/path": "jsr:@std/path@1.1.2",
        "@cliffy/prompt": "jsr:@cliffy/prompt@1.0.0-rc.8",
        "@kd-clients/github": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15/github",
        "@kd-clients/packaging": "jsr:@kinsondigital/kd-clients@1.0.0-preview.15/packaging"
    }
}
