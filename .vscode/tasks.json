{
    "version": "2.0.0",
    "tasks": [
		{ // GENERATE API DOCS
            "label": "Generate API Docs",
            "type": "shell",
            "command": "deno",
			"args": [
				"run",
				"-A",
				"${workspaceFolder}/.github/cicd/scripts/generate-new-api-docs.ts",
				"${workspaceFolder}/docs/api",
				"v1.0.0-preview.4",
				"true", // Is Interactive
			]
        },
        { // RESET DOCS
            "label": "Reset Docs",
            "type": "shell",
            "windows": {
                "command": "deno run --allow-read --allow-write './.github/cicd/manual-testing/reset-docs.ts'",
            }
        },
        { // DISABLE TESTING ENVIRONMENT
            "label": "Disable Testing Environment",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "-A",
                    "${workspaceFolder}/.github/cicd/manual-testing/testing-env.ts",
                    "disable"
                ]
            }
        },
        { // ENABLE TESTING ENVIRONMENT
            "label": "Enable Testing Environment",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "-A",
                    "${workspaceFolder}/.github/cicd/manual-testing/testing-env.ts",
                    "enable"
                ]
            }
        },
		{ // TOGGLE TESTING ENVIRONMENT
            "label": "Toggle Testing Environment",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "-A",
                    "${workspaceFolder}/.github/cicd/manual-testing/testing-env.ts",
                    "toggle"
                ]
            }
        },
		{ // DISABLE NEXT VERSION
            "label": "Disable Next Version",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "-A",
                    "${workspaceFolder}/.github/cicd/manual-testing/next-versioning.ts",
					"${workspaceFolder}/docusaurus.config.js",
					"next-version",
                    "enable"
                ]
            }
        },
		{ // ENABLE NEXT VERSION
            "label": "Enable Next Version",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "-A",
                    "${workspaceFolder}/.github/cicd/manual-testing/next-versioning.ts",
					"${workspaceFolder}/docusaurus.config.js",
					"next-version",
                    "disable"
                ]
            }
        },
        { // BUILD
            "label": "build",
            "dependsOn": [ "Disable Testing Environment" ],
            "type": "shell",
            "windows": {
                "command": "yarn",
                "args": ["build"]
            }
        },
		{ // DELETE API DOCS
			"label": "Delete API Docs",
			"dependsOn": [ "Disable Testing Environment" ],
			"type": "shell",
			"windows": {
				"command": "deno",
				"args": [
					"run",
                    "-A",
					"${workspaceFolder}/.github/cicd/scripts/delete-api-docs.ts",
				]
			}
		}
    ]
}
