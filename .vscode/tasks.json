{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "reset-docs",
            "type": "shell",
            "windows": {
                "command": "deno run --allow-read --allow-write './.github/cicd/manual-testing/reset-docs.ts'",
            }
        },
        {
            "label": "disable-testing-env",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "--allow-read",
                    "--allow-write",
                    "${workspaceFolder}/.github/cicd/manual-testing/testing-env.ts",
                    "disable"
                ]
            }
        },
        {
            "label": "Enable Testing Environment",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "--allow-read",
                    "--allow-write",
                    "${workspaceFolder}/.github/cicd/manual-testing/testing-env.ts",
                    "enable"
                ]
            }
        },
		{
            "label": "Toggle Testing Environment",
            "type": "shell",
            "windows": {
                "command": "deno",
                "args": [
                    "run",
                    "--allow-read",
                    "--allow-write",
                    "${workspaceFolder}/.github/cicd/manual-testing/testing-env.ts",
                    "toggle"
                ]
            }
        },
        {
            "label": "build",
            "dependsOn": [ "disable-testing-env" ],
            "type": "shell",
            "windows": {
                "command": "yarn",
                "args": ["build"]
            }
        }
    ]
}
