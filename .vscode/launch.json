{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
		{
            "name": "Playground (DEBUG)",
            "request": "launch",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/playground.ts",
            "cwd": "${workspaceFolder}/.github/cicd",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all"
            ],
			"args": ["${workspaceFolder}"],
            "attachSimplePort": 9229,
            "windows": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno.exe"
            },
            "linux": {
                "runtimeExecutable": "${userHome}/.deno/bin/deno"
            }
        },
        {
            "request": "launch",
            "name": "Launch (With Doc Reset)",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/doc-process-scripts/main.ts",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "reset-docs",
            "runtimeExecutable": "${userHome}/.deno/bin/deno.EXE",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "args": [
                "${workspaceFolder}/versioned_docs/version-1.0.0-testing/api",
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Launch (Without Doc Reset)",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/doc-process-scripts/main.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${userHome}/.deno/bin/deno.EXE",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "args": [
                "${workspaceFolder}/versioned_docs/version-1.0.0-testing/api",
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Reset Docs",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/manual-testing/reset-docs.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${userHome}/.deno/bin/deno.EXE",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "attachSimplePort": 9229
        },
		{
            "request": "launch",
            "name": "Delete API Doc (DEBUG)",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/manual-testing/delete-api-docs.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${userHome}/.deno/bin/deno.EXE",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "attachSimplePort": 9229,
			"console": "integratedTerminal"
        },
        {
            "request": "launch",
            "name": "Enable Testing Env",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/manual-testing/testing-env.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${userHome}/.deno/bin/deno.EXE",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "args": [
                "enable",
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Update Version",
            "type": "node",
            "program": "${workspaceFolder}/.github/cicd/workflow-helpers/WebsiteVersionUpdater.ts",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${userHome}/.deno/bin/deno.EXE",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-all",
            ],
            "attachSimplePort": 9229
        },
    ]
}
